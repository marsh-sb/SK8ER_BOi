<!--他人の詳細ページ-->
<div class="container">
  <div class="row">
    <div>
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, size: "250x250", fallback: "no-image.jpg" %>
      <% end %>
    </div>

    <div>
      <%= user.name %>
    </div>

    <div>
      <%= user.introduction %>
    </div>
  </div>
</div>