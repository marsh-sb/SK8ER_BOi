<!--他人の詳細ページ-->
<div class="col-3">
  <label>プロフィール画像：</label></br>
  <%#= link_to user_path(user) do %>
    <%#= attachment_image_tag user, :profile_image, size: "150x150", fallback: "no-image.jpg", style: "border-radius: 15px;" %>
  <%# end %>
</div>
<div class="col-3">
  <label>投稿者名：</label></br>
  <%= user.name %>
</div>
<div class="col-3">
  <label>投稿者紹介：</label></br>
  <%= user.introduction %>
</div>