<div class="container">
  <div class="box">
    <div class="box-inner">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <h2>ログイン</h2>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="box-newuser">
      <p><span>---------</span> 新規登録が済んでいない場合 <span>---------</span></p>
      <%= link_to "アカウントを作成する", new_user_registration_path %>
      <%= link_to 'ゲストログインする',users_guest_sign_in_path, method: :post %>
    </div>
    </div>
  </div>
</div>