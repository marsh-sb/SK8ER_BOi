<div class="container">

  <hr class="border-line"/>
  <h2>パークの追加</h2>
  <hr class="border-line"/>

  <%= form_with model:@park, local:true do |f| %>

    <div class="row">
      <h3>写真を追加する</h3></br>
      <% if @park.park_image.present? %>
        <%= attachment_image_tag @park.park_image %>
      <% else %>
        <%= image_tag "no-image.jpg",size: "300x300" %>
      <% end %>
      </br>
      <%= f.attachment_field :park_image %>
    </div></br>

    <div class="row">
      <h3>タイトル</h3>
      <div class="form-group">
        <%= f.text_field :parkname, class:"form-control input-lg" %>
      </div>
    </div></br>

    <div class="row">
      <h3>パーク説明文</h3>
      <div class="form-group">
        <%= f.text_area :parkbody, rows: "10", cols: "50", class:"form-control input-lg" %>
      </div>
    </div></br>

    <div class="row">
      <h3>パーク住所</h3>
      <div class="form-group">
        <%= f.text_field :address, class:"form-control input-lg" %>
      </div>
    </div></br>


    <div class="row">
        <%= f.submit "投稿する", class:"btn btn-dark btn-lg" %>
    </div>
  <% end %>

</div>