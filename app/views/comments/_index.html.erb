<% post.comments.each do |comment| %>
  <% comment_user = comment.user %>
  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag comment.user, :profile_image, size: "30x30", fallback: "no-image.jpg" %>
      <% end %>
    </td>
    <td>
      <%= comment_user.name %>：
    </td>
    <td>
      <%= comment.content %>
    </td>
    <td>
      <% if current_user == comment.user %>
  	    <%= link_to '削除', post_comment_path(comment.post_id, comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %>
      <% end %>
    </td>
  </tr>
<% end %>