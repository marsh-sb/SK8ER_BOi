<div class="container post-park">
  <hr class="border-line"/>
    <h2 class="text-center">新規投稿する</h2>
  <hr class="border-line"/>
  <%= form_with model:@post, local:true do |f| %>

    <div class="row new-post-box">
      <h3 class="new-post-subtitle">タイトルをつける</h3>
        <div class="form-group">
          <%= f.text_field :title, class:"form-control input-lg" %>
        </div>
    </div>

    <div class="row new-park-error_message">
      <%= render 'layouts/error_message', model: @post %>
    </div>

    <div class="row new-post-box">
      <h3 class="new-post-subtitle">投稿内容</h3>
        <div class="form-group">
          <%= f.text_area :body, rows: "10", cols: "50", class:"form-control input-lg" %>
        </div>
    </div>

    <div class="row new-post-box">
      <h3 class="new-post-subtitle">画像の選択</h3>
        <div class="new-post-image-box">
          <% if @post.image.present? %>
            <%= attachment_image_tag @post.image, class: "new-post-image", style: "border-radius: 15px;" %>
          <% else %>
            <%= image_tag "no-image.jpg", class: "new-post-image", style: "border-radius: 15px;" %>
          <% end %>
        </div>
        <div class="new-post-image-button">
          <%= f.attachment_field :image %>
        </div>
    </div>

    <div class="row new-post-box">
      <h3 class="new-post-subtitle">タグを付ける</h3>
        <div class="form-group">
          <%= f.text_field :tag_list, value: @post.tag_list.join(','), class:"form-control input-lg", placeholder:"複数追加するときは「,」を入れてください" %>
        </div>
    </div>

    <div class="row new-post-box">
      <%= f.submit "投稿する", class:"btn btn-default btn-lg new-post-post-button" %>
    </div>
  <% end %>

</div>