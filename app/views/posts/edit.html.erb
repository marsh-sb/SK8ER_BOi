<div class="container post-park">
  <hr class="border-line"/>
    <h2 class="text-center">投稿の編集</h2>
  <hr class="border-line"/>

  <%= form_with model:@post, local:true do |f| %>
  <div class="row new-park-error_message">
    <%= render 'layouts/error_message', model: @post %>
  </div>
  <div class="row mx-auto col-6">
    <div class="input-group m-3">
      <span class="input-group-text">タイトル</span>
      <%= f.text_field :title, class:"form-control input-lg" %>
    </div>
  </div>

  <div class="row mx-auto col-6">
    <div class="input-group m-3">
      <span class="input-group-text">投稿内容</span>
      <%= f.text_area :body, class:"form-control input-lg" %>
    </div>
  </div>

  <div class="row mx-auto col-6">
    <div class="input-group m-3">
      <span class="input-group-text">画像の選択</span>
      <div class="col-12 m-3">
        <% if @post.image.present? %>
          <%= attachment_image_tag @post, :image, size: "300x300", style: "border-radius: 15px;", class: "post-edit-image" %>
        <% else %>
          <%= image_tag "no-image.jpg", size: "300x300", style: "border-radius: 15px;", class: "post-edit-image" %>
        <% end %>
      </div>
      <div class="row m-3">
        <%= f.attachment_field :image, class: "select-image" %>
      </div>
    </div>
  </div>

  <div class="row mx-auto col-6">
    <div class="input-group m-3">
      <span class="input-group-text">タグを付ける</span>
      <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control input-lg" %>
    </div>
  </div>

  <div class="row mx-auto col-6">
    <%= f.submit "更新する", class:"btn btn-block btn-lg btn-default " %>
  </div>

  <% end %>
</div>