<!--投稿一覧表示-->
<div class="container">
  <% @posts.each do |post| %>
    <div class="row">
      <div>
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, size: "150x150", style: "border-radius: 15px;" %>
        <% end %>
      </div>
      <div>
        <p>
          <%= post.title %>
        </p>
        <p>
          <%= post.body %>
        </p>
        <!--タグを実装後にここに表示-->
      </div>
    </div>
  <% end %>
</div>

